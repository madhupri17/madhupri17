def fibonacci(n):
    """Generate Fibonacci series up to n terms."""
    fib_series = [0, 1]
    if n <= 0:
        return []
    elif n == 1:
        return [0]
    elif n == 2:
        return fib_series

    while len(fib_series) < n:
        next_value = fib_series[-1] + fib_series[-2]
        fib_series.append(next_value)

    return fib_series

# Number of terms in the Fibonacci series
n_terms = 10  # Change this value to get more or fewer terms

# Generate Fibonacci series
fib_series = fibonacci(n_terms)

# Print the Fibonacci series
print(f"Fibonacci series up to {n_terms} terms:")
print(fib_series)
